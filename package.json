{
  "name": "@ribeirolabs/PACKAGE_NAME",
  "version": "0.0.0-development",
  "description": "DESCRIPTION",
  "main": "dist/index.js",
  "scripts": {
    "commit": "cz",
    "prebuild": "rimraf dist",
    "postbuild": "node scripts/postbuild.js",
    "build": "run-p build:*",
    "build:lib": "node scripts/build.js",
    "build:types": "tsc -p ./tsconfig.build.json",
    "test": "jest --watch",
    "test:ci": "jest",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ribeirolabs/PACKAGE_NAME.git"
  },
  "keywords": [],
  "author": "Igor Ribeiro <igor.ribeiro.plus@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ribeirolabs/PACKAGE_NAME/issues"
  },
  "homepage": "https://github.com/ribeirolabs/PACKAGE_NAME#readme",
  "devDependencies": {
    "@semantic-release/changelog": "6.0.1",
    "@testing-library/jest-dom": "5.16.2",
    "@types/jest": "27.4.0",
    "@types/jsdom": "16.2.14",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.14.21",
    "jest": "27.5.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "semantic-release": "^19.0.2",
    "semantic-release-cli": "5.4.4",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "pkgRoot": "dist"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && node_modules/.bin/cz --hook || true"
    }
  }
}
